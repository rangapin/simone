{% extends 'base.html.twig' %}

{% block title %}Expense{% endblock %}

{% block body %}

    <div class="container">

        {% include 'includes/_navbar.html.twig' %}

        <h1>Expense</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ expense.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ expense.title }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ expense.amount }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ expense.date ? expense.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ expense.category }}</td>
            </tr>
            <tr>
                <th>Method</th>
                <td>{{ expense.method }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('expense_index') }}">Back to list</a>

    <a class="btn btn-secondary" href="{{ path('expense_edit', {'id': expense.id}) }}">Edit</a>

    {{ include('expense/_delete_form.html.twig') }}
    </div>
{% endblock %}
