
{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">SIMONE</h3></div>
                                <div class="card-body">
                                    <h1 class="h3 mb-3 font-weight-normal">Register</h1>

                                    {{ form_start(registrationForm) }}
                                    <div class="form-group">
                                        <label class="small mb-1">Email</label>
                                        {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control py-4'} }) }}
                                    </div>
                                    <div class="form-group">
                                        <label class="small mb-1">Name</label>
                                        {{ form_widget(registrationForm.name, { 'attr': {'class': 'form-control py-4'} }) }}
                                    </div>
                                    <div class="form-group">
                                        <label class="small mb-1">Surname</label>
                                        {{ form_widget(registrationForm.surname, { 'attr': {'class': 'form-control py-4'} }) }}
                                    </div>
                                    <div class="form-group">
                                        <label class="small mb-1">Password</label>
                                        {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control py-4'} }) }}
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        {{ form_row(registrationForm.agreeTerms) }}
                                    </div>

                                    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <button type="submit" class="btn btn-primary" >Register</button>
                                        <a class="btn btn-success" href="{{ path('app_login') }}">Log in</a></div>
                                    {{ form_end(registrationForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}