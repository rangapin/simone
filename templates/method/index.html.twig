{% extends 'base.html.twig' %}

{% block title %}Method index{% endblock %}

{% block body %}
    <h1>Method index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for method in methods %}
            <tr>
                <td>{{ method.id }}</td>
                <td>{{ method.name }}</td>
                <td>{{ method.description }}</td>
                <td>
                    <a href="{{ path('method_show', {'id': method.id}) }}">show</a>
                    <a href="{{ path('method_edit', {'id': method.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('method_new') }}">Create new</a>
{% endblock %}
