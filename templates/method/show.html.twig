{% extends 'base.html.twig' %}

{% block title %}Method{% endblock %}

{% block body %}

<div class="container">

    {% include 'includes/_navbar.html.twig' %}
    <h1>Method</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ method.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ method.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ method.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('method_index') }}">Back to list</a>

    <a class="btn btn-secondary" href="{{ path('method_edit', {'id': method.id}) }}">Edit</a>

    {{ include('method/_delete_form.html.twig') }}
</div>
{% endblock %}
